{
  "name": "private-trade-hook",
  "version": "1.0.0",
  "description": "Uniswap v4 hook for fully encrypted private trading with FHE",
  "scripts": {
    "test": "forge test --via-ir",
    "test:unit": "forge test --via-ir --no-match-path 'test/integration/*'",
    "test:integration": "source .env && forge test --via-ir --match-path 'test/integration/*' --fork-url $ARB_SEPOLIA_RPC",
    "test:integration:eth": "source .env && forge test --via-ir --match-path 'test/integration/EthSepolia*' --fork-url $ETH_SEPOLIA_RPC -vvv",
    "deploy:arb-sepolia": "npx tsx scripts/deploy-arb-sepolia.ts",
    "deploy:arb-sepolia:forge": "source .env && forge script script/DeployArbSepolia.s.sol:DeployArbSepolia --rpc-url $ARB_SEPOLIA_RPC --broadcast",
    "deploy:eth-sepolia": "source .env && forge script script/DeployEthSepolia.s.sol:DeployEthSepolia --rpc-url $ETH_SEPOLIA_RPC --broadcast"
  },
  "keywords": [
    "blockchain",
    "ethereum",
    "smart-contracts",
    "solidity",
    "FHE",
    "encryption",
    "privacy",
    "coprocessor",
    "fhenix",
    "cofhe",
    "uniswap",
    "trading",
    "hooks",
    "MEV-protection"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@nomicfoundation/hardhat-ethers": "^3.0.8",
    "@nomicfoundation/hardhat-foundry": "^1.1.3",
    "@nomicfoundation/hardhat-toolbox": "^5.0.0",
    "@types/node": "^20.10.0",
    "bignumber.js": "^9.3.0",
    "@fhenixprotocol/cofhe-mock-contracts": "0.3.0",
    "dotenv": "^16.3.1",
    "forge-std": "github:foundry-rs/forge-std",
    "hardhat": "^2.22.19",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0"
  },
  "dependencies": {
    "@fhenixprotocol/cofhe-contracts": "0.0.13",
    "@openzeppelin/contracts": "^5.0.0",
    "@openzeppelin/contracts-upgradeable": "^5.0.0",
    "@uniswap/v4-core": "1.0.2",
    "@uniswap/v4-periphery": "1.0.2",
    "cofhejs": "0.2.1-alpha.1"
  }
}
